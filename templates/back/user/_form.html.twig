{{ form_start(userForm) }}
<div class="card m-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <p class="h4">{{ title }}</p>
    </div>
    <div class="card-body">
        {{ form_errors(userForm) }}
        {{ form_row(userForm.firstname) }}
        {{ form_row(userForm.lastname) }}
        {{ form_row(userForm.username) }}
        {{ form_row(userForm.password) }}
        {{ form_row(userForm.gender) }}
        {{ form_row(userForm.age) }}
        {{ form_row(userForm.promotion) }}
    </div>
    <div class="card-footer">
        <a href="{{ path('user_manage') }}" class="btn btn-secondary">Retour</a>
        <button class="btn btn-primary">{{ action }}</button>
    </div>
</div>
{{ form_end(userForm) }}