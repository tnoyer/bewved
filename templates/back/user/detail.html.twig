{% extends 'back/base.html.twig' %}

{% block title %}{{ parent() }} | Détail de l'utilisateur{% endblock %}

{% block main %}

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-6">
            <div class="card m-4">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <p class="h4">{{ user.username }}</p>
                </div>
                <table class="table table-striped table-novered mb-0">
                    <tbody>
                    <tr>
                        <td class="text-center align-middle">Prénom</td>
                        <td class="text-center align-middle">{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <td class="text-center align-middle">Nom</td>
                        <td class="text-center align-middle">{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <td class="text-center align-middle">Nom d'utilisateur</td>
                        <td class="text-center align-middle">{{ user.username }}</td>
                    </tr>
                    <tr>
                        <td class="text-center align-middle">Sexe</td>
                        <td class="text-center align-middle">{{ user.gender }}</td>
                    </tr>
                    <tr>
                        <td class="text-center align-middle">Age</td>
                        <td class="text-center align-middle">{{ user.age }}</td>
                    </tr>
                    <tr>
                        <td class="text-center align-middle">Promotion</td>
                        <td class="text-center align-middle">{{ user.promotion }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="card-body">
                    <a href="{{ path('user_manage') }}" class="btn btn-secondary">Retour</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}