{% extends 'back/base.html.twig' %}

{% block title %}{{ parent() }} | Liste des utilisateurs{% endblock %}

{% block main %}
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card m-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <p class="h4">Liste des utilisateurs</p>
                    <a href="{{ path('user_create') }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-novered mb-0">
                        <thead>
                        <tr>
                            <th class="text-center text-uppercase">Id</th>
                            <th class="text-center text-uppercase">PrÃ©nom</th>
                            <th class="text-center text-uppercase">Nom</th>
                            <th class="text-center text-uppercase">Nom d'utilisateur</th>
                            <th class="text-center text-uppercase">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td class="text-center align-middle">{{ user.id }}</td>
                                <td class="text-center align-middle">{{ user.firstname }}</td>
                                <td class="text-center align-middle">{{ user.lastname }}</td>
                                <td class="text-center align-middle">{{ user.username }}</td>
                                <td class="text-center align-middle">
                                    <a href="{{ path('user_detail', { id: user.id }) }}" class="btn btn-info"><i class="fa fa-info"></i></a>
                                    <a href="{{ path('user_update', { id: user.id }) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('user_delete', { id: user.id }) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center align-middle">Aucun apprenant</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}