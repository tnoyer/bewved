{% extends 'back/base.html.twig' %}

{% block title %}{{ parent() }} | Liste des sessions{% endblock %}

{% block main %}
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card m-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <p class="h4">Liste des sessions</p>
                    <a href="{{ path('session_create') }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-novered mb-0">
                        <thead>
                        <tr>
                            <th class="text-center text-uppercase">Id</th>
                            <th class="text-center text-uppercase">Nom</th>
                            <th class="text-center text-uppercase">DÃ©but</th>
                            <th class="text-center text-uppercase">Fin</th>
                            <th class="text-center text-uppercase">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for session in sessions %}
                            <tr>
                                <td class="text-center align-middle">{{ session.id }}</td>
                                <td class="text-center align-middle">{{ session.name }}</td>
                                <td class="text-center align-middle">{{ session.start|date('d/m/Y') }}</td>
                                <td class="text-center align-middle">{{ session.end|date('d/m/Y') }}</td>
                                <td class="text-center align-middle">
                                    <a href="{{ path('session_detail', { id: session.id }) }}" class="btn btn-info"><i class="fa fa-info"></i></a>
                                    <a href="{{ path('session_update', { id: session.id }) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('session_delete', { id: session.id }) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center align-middle">Aucune session</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}